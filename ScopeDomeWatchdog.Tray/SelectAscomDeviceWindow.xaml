<Window x:Class="ScopeDomeWatchdog.Tray.SelectAscomDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select ASCOM Device" Height="400" Width="600"
        Background="{StaticResource BackgroundColor}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox Name="DeviceList" DisplayMemberPath="Display" Grid.Row="0" 
                 BorderThickness="1" Padding="4" MinHeight="150" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Width="90" Margin="0,0,8,0" Content="OK" Click="OkButton_Click" />
            <Button Width="90" Content="Cancel" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
