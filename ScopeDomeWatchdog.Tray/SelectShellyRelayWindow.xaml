<Window x:Class="ScopeDomeWatchdog.Tray.SelectShellyRelayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Shelly Relay" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" Name="RelayList" DisplayMemberPath="Display" SelectionMode="Single" Margin="0,0,0,12" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="90" Margin="0,0,8,0" Content="OK" Click="OkButton_Click" Background="{StaticResource SuccessColor}" Foreground="White" />
            <Button Width="90" Content="Cancel" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
