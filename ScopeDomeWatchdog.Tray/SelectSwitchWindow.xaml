<Window x:Class="ScopeDomeWatchdog.Tray.SelectSwitchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Switches to Monitor" Height="450" Width="750"
        Background="{StaticResource BackgroundColor}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="0,0,0,8" Foreground="{StaticResource TextColor}"
                   Text="Select switches to monitor. Their states will be cached every 30 seconds and restored after dome reconnection."
                   TextWrapping="Wrap" />

        <DataGrid Name="SwitchGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="False" 
                  SelectionMode="Single" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Monitor" Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="70" />
                <DataGridTextColumn Header="Index" Binding="{Binding Index}" Width="50" IsReadOnly="True" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" IsReadOnly="True" />
                <DataGridTextColumn Header="CanWrite" Binding="{Binding CanWrite}" Width="70" IsReadOnly="True" />
                <DataGridTextColumn Header="State" Binding="{Binding State}" Width="60" IsReadOnly="True" />
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="60" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Width="90" Margin="0,0,8,0" Content="OK" Click="OkButton_Click" />
            <Button Width="90" Content="Cancel" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
